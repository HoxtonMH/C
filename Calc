#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <stdlib.h>

double addition(double nombre1, double nombre2)
{
	double resultat;

	resultat = nombre1 + nombre2;
	return resultat;
}

double soustraction(double nombre1, double nombre2)
{
	double resultat;

	resultat = nombre1 - nombre2;
	return resultat;
}

double multiplication(double nombre1, double nombre2)
{
	double resultat;

	resultat = nombre1 * nombre2;
	return resultat;
}

double division(double nombre1, double nombre2)
{
	double resultat;

	resultat = nombre1 / nombre2;
	return resultat;
}

int main(int argc, char *argv[])
{
	int exit = 0, choixMenu;
	double nbChoix1, nbChoix2, resultat;

	while(exit == 0)
	{
		printf("===MENU===\n1.Addition\n2.Soustraction\n3.Multiplication\n4.Division\nAppuyer sur 5 si vous souhaitez quitter l'application\n");
		scanf("%d", &choixMenu);
		switch (choixMenu)
		{
		case 1:
			printf("===Addition===\n Choisissez le nombre 1 :\n");
			scanf("%lf", &nbChoix1);
			printf("===Addition===\n Choisissez le nombre 2 :\n");
			scanf("%lf", &nbChoix2);
			resultat = addition(nbChoix1, nbChoix2);
			printf("Le resultat de cette addition est %lf\n", resultat);
			break;
		case 2:
			printf("===Soustraction===\n Choisissez le nombre 1 :\n");
			scanf("%lf", &nbChoix1);
			printf("===Soustraction===\n Choisissez le nombre 2 :\n");
			scanf("%lf", &nbChoix2);
			resultat = soustraction(nbChoix1, nbChoix2);
			printf("Le resultat de cette soustraction est %lf\n", resultat);
			break;
		case 3:
			printf("===Multiplication===\n Choisissez le nombre 1 :\n");
			scanf("%lf", &nbChoix1);
			printf("===Multiplication===\n Choisissez le nombre 2 :\n");
			scanf("%lf", &nbChoix2);
			resultat = multiplication(nbChoix1, nbChoix2);
			printf("Le resultat de cette multiplication est %lf\n", resultat);
			break;
		case 4:
			printf("===Division===\n Choisissez le nombre 1 :\n");
			scanf("%lf", &nbChoix1);
			printf("===Division===\n Choisissez le nombre 2 :\n");
			scanf("%lf", &nbChoix2);
			resultat = division(nbChoix1, nbChoix2);
			printf("Le resultat de cette division est %lf\n", resultat);
			break;
		case 5:
			exit = 1;
			break;
		default:
			printf("Veuillez entrez un nombre correct !\n");
		}
	}

	system("PAUSE");
	return 0;
}
